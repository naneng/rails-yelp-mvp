<div class="container">

  <h1>Restaurant List</h1>
  <% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <p>|<strong>add</strong>| <%= restaurant.address %></p>
    <p>|<strong>tel</strong>| <%= restaurant.phone_number %></p>
    <p>|<strong>category</strong>| <%= restaurant.category.capitalize %></p>
  <% end %>

  <%= link_to new_restaurant_path do %>
    <i class="fas fa-plus-square"> Restaurant</i>
  <% end %>
</div>
